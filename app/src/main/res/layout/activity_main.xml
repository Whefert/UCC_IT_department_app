<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp"
    android:orientation="vertical"
    android:background="@drawable/main_activity_bg"
    tools:context=".MainActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ucc_logo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="IT Department App"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_margin="20dp"

        />

<TextView
    android:id="@+id/tv_facultyStaff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Faculty/Staff Directory"
    android:background="@drawable/default_option_border_bg"
    android:textColor="@color/black"
    android:gravity="center"
    android:textSize="18sp"
    android:padding="20dp"    />

    <!--    android:background=""-->

    <TextView
        android:id="@+id/tv_courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Courses"
        android:background="@drawable/default_option_border_bg"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="18sp"
        android:padding="20dp"
        />

    <TextView
        android:id="@+id/tv_admissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admissions"
        android:background="@drawable/default_option_border_bg"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="18sp"
        android:padding="20dp"        />
<!--        android:background=""-->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"

        >
        <TextView
            android:id="@+id/tv_followUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Follow Us: "
            android:textSize="18sp"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:id="@+id/iv_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="50dp"
            >

            <ImageView
                android:id="@+id/ivInstagram"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/instagram_logo" />

            <ImageView
                android:id="@+id/ivFacebook"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/facebook_logo"
            android:clickable="true"
            android:layout_weight="1"
            />

            <ImageView
                android:id="@+id/ivTwitter"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/twitter_logo"
                android:clickable="true"
                android:layout_weight="1"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
            android:layout_marginTop="60dp"

        >
        <!--        android:layout_marginRight="40dp"-->

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity=""
            android:tint="@color/ucc_yellow"
            android:src="@drawable/baseline_email_24"
            android:contentDescription="send email"
            />
<!--            android:layout_marginTop="60dp"-->

        <!--            android:layout_marginRight="40dp"-->


    </LinearLayout>

    
</LinearLayout>



