<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacultyDetails"
    android:gravity="fill_vertical"
    android:orientation="vertical"
    >

    <include layout="@layout/custom_toolbar"/>
    <ImageView
        android:id="@+id/iv_facultyImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        tools:src="@drawable/ucc_logo"
        />

    <TextView
        android:id="@+id/tv_facultyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text = "Faculty Name"
        android:textSize="18sp"
        android:gravity="center"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="3dp"
        android:src="@drawable/separator"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        />

    <TextView
        android:id="@+id/tv_facultyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text = "Faculty Title"
        android:textSize="18sp"
        android:gravity="center"
        />

    <LinearLayout
        android:id="@+id/ll_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="true"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_phone_24"

            />
        <TextView
            android:id="@+id/tv_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1(876)789-2131"
            android:gravity="center"
            android:paddingLeft="10dp"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="true"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_email_24"
            />
        <TextView
            android:id="@+id/tv_emailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="faculty@ucc.jm.edu"
            android:gravity="center"
            android:paddingLeft="10dp"
            />
    </LinearLayout>

</LinearLayout>